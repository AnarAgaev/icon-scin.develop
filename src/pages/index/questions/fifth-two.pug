//- Including progress bar mixin
include ../progress/progress

//- visible hidden
section.step#questionFifthTwo.hidden
    .step__wrap
        .container.animation-element
            .row
                .col-12
                    h3.step__title
                        | Бывают ли зуд и/или покраснения
                        br.d-lg-none
                        | как реакция
                        br.d-none.d-lg-block
                        | на ветер, холод,&nbsp;
                        br.d-lg-none
                        | косметические средства?

        .container.animation-element
            .row
                .col-12.col-xl-5.offset-xl-2
                    form.form-question(action="")

                        label.form-question__label
                            input.controller.btn_next-step.invisible(
                                type="radio"
                                name="questionFifthTwo"
                                data-question="Бывают ли зуд и/или покраснения как реакция на ветер, холод, косметические средства?"
                                data-answer="Да."
                                data-next-step-id="#questionSixth")
                            span.form-question__pic(data-src="img/questions/fifth-two/1.jpg")
                            span.form-question__val Да

                        label.form-question__label
                            input.controller.btn_next-step.invisible(
                                type="radio"
                                name="questionFifthTwo"
                                data-question="Бывают ли зуд и/или покраснения как реакция на ветер, холод, косметические средства?"
                                data-answer="Ничего такого у меня нет."
                                data-next-step-id="#questionSixth")
                            span.form-question__pic(data-src="img/questions/fifth-two/2.jpg")
                            span.form-question__val
                                | Ничего такого
                                br
                                | у меня нет

                        .state__btn-wrap.d-none.d-xl-flex.justify-content-center
                            button.btn.btn_back.btn_prev-step(type="button")
                                include ../../../img/i-btn-back.svg
                                span Назад

                .col-12.col-xl-3.ml-xl-n4
                    .state
                        .state__sidebar
                            .state__progress
                                //- Передаём в Миксин процент прохождения
                                +progress(60, 75, 90)

                            .state__step
                                span Вопрос
                                | !{" "}
                                span.accent 5
                                | !{" "}
                                span из 7

                            .state__btn-wrap.d-xl-none
                                button.btn.btn_back.btn_prev-step(type="button")
                                    include ../../../img/i-btn-back.svg
                                    span Назад

                        .state__title Система формирует ваш протокол ухода

                        .state__protocol
                            img.protocols(data-src="img/protocols/fifth.png" src="" alt="")